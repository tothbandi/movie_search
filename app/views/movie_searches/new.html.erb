<%= tag.div(class: %w(upper-right-corner upper)) do %>
  <%= link_to "Sign Out", session_path, data: { turbo_method: :delete } %>
<% end %>
<%= tag.div(class: %w(container column)) do %>
  <%= tag.h1 "Search in The Movie Database (TMDB)", class: %w(page-title) %>
  <%= tag.div(class: "search-block") do %>
    <%= render "movie_searches/search" %>
  <% end %>
  <%= tag.div(class: "info-bar") do %>
    <%= flash[:notice] %>
  <% end %>
<% end %>
<%= render "movie_searches/movies" if @movies %>
<%= tag.br %>